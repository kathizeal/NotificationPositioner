<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="SampleNotify.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleNotify"
    xmlns:converters="using:SampleNotify.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:StatusColorConverter x:Key="StatusColorConverter"/>
            <converters:StatusTextConverter x:Key="StatusTextConverter"/>
            <converters:NotificationCountConverter x:Key="NotificationCountConverter"/>
            <converters:MonitoringTextConverter x:Key="MonitoringTextConverter"/>
            <converters:MonitoringStatusColorConverter x:Key="MonitoringStatusColorConverter"/>
            <converters:MonitoringStatusTextConverter x:Key="MonitoringStatusTextConverter"/>
            <converters:AppCountConverter x:Key="AppCountConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
